{
  "private": true,
  "name": "beemo-dev",
  "version": "0.0.0",
  "scripts": {
    "postinstall": "yarn run build",
    "build": "packemon build --addEngines",
    "pack": "NODE_ENV=production packemon pack --addEngines --declaration=standard",
    "check": "yarn run type && yarn run test && yarn run lint",
    "format": "prettier --write .",
    "lint": "eslint --cache --fix packages/*/{src,tests}/**/*.ts",
    "test": "jest",
    "type": "tsc --build",
    "prerelease": "yarn run pack && yarn test",
    "release": "lerna publish"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@beemo/core": "^2.0.0-rc.3",
    "@beemo/driver-babel": "^2.0.0-rc.3",
    "@beemo/driver-eslint": "^2.0.0-rc.3",
    "@beemo/driver-jest": "^2.0.0-rc.2",
    "@beemo/driver-prettier": "^2.0.0-rc.3",
    "@beemo/driver-typescript": "^2.0.0-rc.3",
    "conventional-changelog-beemo": "^2.1.0",
    "eslint": "^7.28.0",
    "jest": "^27.0.4",
    "jest-circus": "^27.0.4",
    "lerna": "^4.0.0",
    "packemon": "^0.16.6",
    "prettier": "^2.3.0",
    "typescript": "^4.3.2"
  }
}

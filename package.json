{
  "private": true,
  "name": "beemo-dev",
  "version": "0.0.0",
  "scripts": {
    "postinstall": "yarn run build",
    "build": "packemon build --addEngines",
    "pack": "NODE_ENV=production packemon pack --addEngines --declaration=standard",
    "check": "yarn run type && yarn run test && yarn run lint",
    "format": "prettier --write .",
    "lint": "eslint --cache --fix packages/*/{src,tests}/**/*.ts",
    "test": "jest",
    "type": "tsc --build",
    "prerelease": "node packages/dev/lib/checks/githubToken.js && yarn run pack && yarn test",
    "release": "lerna version --conventional-commits --changelog-preset conventional-changelog-beemo --create-release github --push && lerna publish from-git"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@beemo/core": "^2.0.0-rc.3",
    "@beemo/driver-babel": "^2.0.0-rc.3",
    "@beemo/driver-eslint": "^2.0.0-rc.3",
    "@beemo/driver-jest": "^2.0.0-rc.2",
    "@beemo/driver-prettier": "^2.0.0-rc.3",
    "@beemo/driver-typescript": "^2.0.0-rc.3",
    "conventional-changelog-beemo": "^2.1.0",
    "eslint": "^7.30.0",
    "jest": "^27.0.6",
    "jest-circus": "^27.0.6",
    "lerna": "^4.0.0",
    "packemon": "^1.0.0",
    "prettier": "^2.3.2",
    "typescript": "^4.3.5"
  },
  "engines": {
    "node": ">=12.17.0"
  }
}
